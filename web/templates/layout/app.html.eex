<!DOCTYPE html>
<html>

  <head>
    <title>Angular 2 QuickStart</title>

    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
    <!-- 1. Load libraries -->
    <script src="<%= static_path(@conn, "/node_modules/angular2/bundles/angular2-polyfills.js") %>"></script>
    <script src="<%= static_path(@conn, "/node_modules/systemjs/dist/system.src.js") %>"></script>
    <script src="<%= static_path(@conn, "/node_modules/rxjs/bundles/Rx.js") %>"></script>
    <script src="<%= static_path(@conn, "/node_modules/angular2/bundles/angular2.dev.js") %>"></script>
    <!-- 2. Configure SystemJS -->
    <script>
      System.config({
        packages: {
          build: {
            format: 'register',
            defaultExtension: 'js'
          }
        }
      });
      System.import('build/boot')
            .then(null, console.error.bind(console));
    </script>

  </head>

  <!-- 3. Display the application -->
  <body>
    <my-app>Loading...</my-app>
  </body>

</html>
